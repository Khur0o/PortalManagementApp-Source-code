<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDataInformationEdit">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerbl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Data Information"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/white"/>



                </LinearLayout>

            </FrameLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Student Information:"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#A9A9A9"/>



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Student Name : "
                                        android:layout_marginTop="20dp"
                                        android:textColor="#A9A9A9"/>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dp"
                                        android:hint="Fullname"
                                        app:boxStrokeErrorColor="@color/error"
                                        app:boxStrokeColor="@color/main"
                                        android:textColorHint="#A9A9A9"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/name"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:inputType="text"
                                            android:textColor="#A9A9A9"
                                            android:lines="1"
                                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Student Age : "
                                        android:layout_marginTop="20dp"
                                        android:textColor="#A9A9A9"/>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="130dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dp"
                                        app:boxStrokeErrorColor="@color/error"
                                        app:boxStrokeColor="@color/main"
                                        android:textColorHint="#A9A9A9"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/studentage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:inputType="number"
                                            android:textColor="#A9A9A9"
                                            android:lines="1"
                                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LRN : "
                                android:layout_marginTop="20dp"
                                android:textColor="#A9A9A9"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:hint="XXXXXXYYZZZZ"
                                app:boxStrokeErrorColor="@color/error"
                                app:boxStrokeColor="@color/bg"
                                android:textColorHint="#A9A9A9"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/studentnum"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:textColor="#A9A9A9"
                                    android:maxLength="12"
                                    android:lines="1"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                            </com.google.android.material.textfield.TextInputLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender : "
                                android:layout_marginTop="20dp"
                                android:textColor="#A9A9A9"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:buttonTint="#A9A9A9"
                                    android:text="Male"
                                    android:textColor="#A9A9A9" />

                                <CheckBox
                                    android:id="@+id/female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Female"
                                    android:textColor="#A9A9A9"
                                    android:buttonTint="#A9A9A9"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Birthday : "
                                android:layout_marginTop="20dp"
                                android:textColor="#A9A9A9"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:hint="MM/DD/YYYY"
                                    app:boxStrokeErrorColor="@color/error"
                                    app:boxStrokeColor="@color/main"
                                    android:textColorHint="#A9A9A9"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/birth"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="number"
                                        android:textColor="#A9A9A9"
                                        android:maxLength="2"
                                        android:lines="1"
                                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:hint="Birth place"
                                app:boxStrokeErrorColor="@color/error"
                                app:boxStrokeColor="@color/main"
                                android:textColorHint="#A9A9A9"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/birthplace"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="text"
                                    android:textColor="#A9A9A9"
                                    android:lines="1"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="20dp">
                                <Button
                                    android:id="@+id/img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Upload Profile Image"
                                    android:textColor="@color/white"/>

                                <CheckBox
                                    android:id="@+id/check"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#A9A9A9"
                                    android:clickable="false"
                                    android:buttonTint="#A9A9A9"/>
                            </LinearLayout>


                        </LinearLayout>



                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Student Contact:"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#A9A9A9"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Address : "
                                        android:layout_marginTop="20dp"
                                        android:textColor="#A9A9A9"/>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dp"
                                        android:hint="Full Address"
                                        app:boxStrokeErrorColor="@color/error"
                                        app:boxStrokeColor="@color/main"
                                        android:textColorHint="#A9A9A9"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/address"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:inputType="text"
                                            android:textColor="#A9A9A9"
                                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Phone/ Mobile Number : "
                                        android:layout_marginTop="20dp"
                                        android:textColor="#A9A9A9"/>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dp"
                                        app:boxStrokeErrorColor="@color/error"
                                        app:boxStrokeColor="@color/main"
                                        android:textColorHint="#A9A9A9"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/phone"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:inputType="number"
                                            android:textColor="#A9A9A9"
                                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Emergency Contact : "
                                        android:layout_marginTop="20dp"
                                        android:textColor="#A9A9A9"/>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dp"
                                        android:hint="Emergency Contact Name"
                                        app:boxStrokeErrorColor="@color/error"
                                        app:boxStrokeColor="@color/main"
                                        android:textColorHint="#A9A9A9"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/emername"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:inputType="text"
                                            android:textColor="#A9A9A9"
                                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    </com.google.android.material.textfield.TextInputLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dp"
                                        android:hint="Emergency Contact Phone/ Mobile Number"
                                        app:boxStrokeErrorColor="@color/error"
                                        app:boxStrokeColor="@color/main"
                                        android:textColorHint="#A9A9A9"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/emerphone"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:inputType="number"
                                            android:textColor="#A9A9A9"
                                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                    <Button
                        android:id="@+id/done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:text="Save"
                        />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>